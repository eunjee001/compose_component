<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HelloWorld"
        tools:targetApi="31">
        <activity
            android:name=".ProfileCardActivity"
            android:exported="false"
            android:label="@string/title_activity_profile_card"
            android:theme="@style/Theme.HelloWorld" />
        <activity
            android:name=".NetworkImageActivity"
            android:exported="false"
            android:label="@string/title_activity_network_image"
            android:theme="@style/Theme.HelloWorld" />
        <activity
            android:name=".ImageActivity"
            android:exported="false"
            android:label="@string/title_activity_image"
            android:theme="@style/Theme.HelloWorld" />
        <activity
            android:name=".ColumnActivity"
            android:exported="false"
            android:label="@string/title_activity_column"
            android:theme="@style/Theme.HelloWorld" />
        <activity
            android:name=".RowActivity"
            android:exported="false"
            android:label="@string/title_activity_row"
            android:theme="@style/Theme.HelloWorld" />
        <activity
            android:name=".SurfaceActivity"
            android:exported="false"
            android:label="@string/title_activity_surface"
            android:theme="@style/Theme.HelloWorld" />
        <activity
            android:name=".ButtonActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.HelloWorld">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>